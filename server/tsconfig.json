{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "rootDir": ".",
  },
  "include": ["./src/**/*.ts", "src/.d.ts"],
  "exclude": ["node_modules"]
}