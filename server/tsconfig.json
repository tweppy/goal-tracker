{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "rootDir": "./",
  },
  "include": ["./src/**/*.ts", "src/.d.ts"],
}